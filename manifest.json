{
    "manifest_version" : 3,
    "name" : "Coderforces Timer",
    "version" : "1.0.0",
    "description" : "Custom timer for Codeforces",
    "content_scripts" : 
    [
        {
            "matches" : ["https://codeforces.com/*"],
            "js" : ["./scripts/content_script.js"],
            "css" : ["./css/style.css"]
        }
    ],
    "icons" : 
    {
        "16": "icons/image-16x16.jpg",
        "48": "icons/image-48x48.jpg",
        "128": "icons/image-128x128.jpg"
     },
    "action" : 
    {
        "default_popup" : "popup.html",
        "default_icon": 
        {
            "16": "icons/image-16x16.jpg",
            "48": "icons/image-48x48.jpg",
            "128": "icons/image-128x128.jpg"
        }
    },
    "permissions" : ["scripting" , "tabs", "storage"],
    "host_permissions" : ["<all_urls>"]
}

